%{
    #include <stdio.h>
%}

%%
"/*"([^*]|[\r\n]|(\*+([^*/]|[\r\n])))*"*+/" { printf("Block Comment: %s\n", yytext); }
"//".*[\r\n]                              { printf("Line Comment: %s\n", yytext); }
.|\n                                      { /* Ignore other tokens */ }
%%

int main(int argc, char **argv) 
{
    if (argc > 1) 
    {
        FILE *file = fopen(argv[1], "r");
        if (!file) 
        {
            perror("fopen");
            return 1;
        }
        yyin = file;
    }

    yylex();

    return 0;
}
